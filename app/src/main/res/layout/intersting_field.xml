<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:text="Choose an Intersting Field"
        android:id="@+id/textView11"
        android:layout_x="22dp"
        android:layout_y="48dp"
        android:textColor="#ff8533"
        android:textSize="30dp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="75dp"
        android:layout_y="126dp"
        android:id="@+id/radioSelectField">



    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coding"
        android:id="@+id/rbtn_coding"
        android:layout_x="75dp"
        android:layout_y="175dp"
        android:checked="false"
        android:textSize="25dp"
        android:textColor="#004080"
        android:layout_marginBottom="20dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Networking"
        android:id="@+id/rBtn_Networking"
        android:layout_x="70dp"
        android:layout_y="139dp"
        android:checked="false"
        android:textSize="25dp"
        android:textColor="#004080"
        android:layout_marginBottom="20dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Business Analyst"
        android:id="@+id/rBtn_BA"
        android:layout_x="80dp"
        android:layout_y="100dp"
        android:checked="false"
        android:textSize="25dp"
        android:textColor="#004080"
        android:layout_marginBottom="20dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IT Manager"
            android:id="@+id/bBtn_ITmanager"
            android:layout_x="75dp"
            android:layout_y="196dp"
            android:checked="false"
            android:textSize="25dp"
            android:textColor="#004080"
            android:layout_marginBottom="20dp" />
    </RadioGroup>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="FieldDescription"
        android:id="@+id/btn_jobDes"
        android:layout_x="40dp"
        android:layout_y="374dp"
        android:onClick="onFieldDescription"
        android:background="#ff8533"
        android:textColor="#ffffff"
        android:textSize="25dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/btn_FinalSubmit"
        android:layout_x="101dp"
        android:layout_y="480dp"
        android:onClick="onFinalSubmit"
        android:background="#ff8533"
        android:textColor="#ffffff"
        android:textSize="25dp" />


</AbsoluteLayout>