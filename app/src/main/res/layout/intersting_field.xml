<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:text="Choose the Intersting Field"
        android:id="@+id/textView11"
        android:layout_x="96dp"
        android:layout_y="35dp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="80dp"
        android:layout_y="97dp"
        android:id="@+id/radioSelectField">



    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coding"
        android:id="@+id/rbtn_coding"
        android:layout_x="75dp"
        android:layout_y="175dp"
        android:checked="false" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Networking"
        android:id="@+id/rBtn_Networking"
        android:layout_x="70dp"
        android:layout_y="139dp"
        android:checked="false" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Business Analyst"
        android:id="@+id/rBtn_BA"
        android:layout_x="80dp"
        android:layout_y="100dp"
        android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IT Manager"
            android:id="@+id/bBtn_ITmanager"
            android:layout_x="75dp"
            android:layout_y="196dp"
            android:checked="false" />
    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FieldDescription"
        android:id="@+id/btn_jobDes"
        android:layout_x="118dp"
        android:layout_y="274dp"
        android:onClick="onFieldDescription"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/btn_FinalSubmit"
        android:layout_x="274dp"
        android:layout_y="385dp"
        android:onClick="onFinalSubmit"/>


</AbsoluteLayout>