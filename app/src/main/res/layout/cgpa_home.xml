<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="364dp"
        android:layout_height="460dp"
        android:layout_below="@+id/radioYear"
        android:layout_marginTop="56dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_x="9dp"
        android:layout_y="26dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:id="@+id/btn_submit"
            android:layout_marginLeft="45dp"
            android:layout_marginStart="45dp"
            android:layout_alignTop="@+id/textView3"
            android:layout_toRightOf="@+id/textView3"
            android:layout_toEndOf="@+id/textView3"
            android:onClick="onCGPASubmit" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_cgpa"
            android:hint="CGPA"
            android:layout_below="@+id/textView3"
            android:layout_alignRight="@+id/textView3"
            android:layout_alignEnd="@+id/textView3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter CGPA"
            android:id="@+id/textView3"
            android:layout_marginTop="77dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="118dp"
            android:layout_marginStart="118dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don&apos;t know CGPA?"
            android:id="@+id/lab_cgpa"
            android:layout_marginTop="58dp"
            android:layout_below="@+id/txt_cgpa"
            android:layout_centerHorizontal="true"
            android:textColor="#ff2620ff"
            android:onClick="onCalculateCGPA"
            android:clickable="true" />
    </RelativeLayout>
</AbsoluteLayout>