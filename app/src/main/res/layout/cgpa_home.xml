<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="364dp"
        android:layout_height="460dp"
        android:layout_x="9dp"
        android:layout_y="26dp"
        android:id="@+id/relativeLayout2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#cddff2">

        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Next"
            android:id="@+id/btn_submit"
            android:onClick="onCGPASubmit"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/lab_cgpa"
            android:layout_alignEnd="@+id/lab_cgpa"
            android:textColor="#ffffff"
            android:background="#ff8533"
            android:textSize="25dp" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_cgpa"
            android:hint="CGPA"
            android:textSize="25dp"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignRight="@+id/btn_submit"
            android:layout_alignEnd="@+id/btn_submit" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Enter CGPA"
            android:id="@+id/textView3"
            android:textSize="25dp"
            android:textColor="#004080"
            android:layout_marginTop="64dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/txt_cgpa"
            android:layout_toStartOf="@+id/txt_cgpa"
            android:layout_marginRight="26dp"
            android:layout_marginEnd="26dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don&apos;t know CGPA?"
            android:id="@+id/lab_cgpa"
            android:textColor="#ff2620ff"
            android:onClick="onCalculateCGPA"
            android:clickable="true"
            android:textSize="30dp"
            android:layout_below="@+id/btn_submit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="78dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CGPA"
        android:id="@+id/textView13"
        android:layout_x="774dp"
        android:layout_y="670dp"
        android:textSize="50dp"
        android:textColor="#ff8533"
        android:layout_above="@+id/relativeLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp" />
</RelativeLayout>