<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate CGPA"
        android:id="@+id/btn_CGPA"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Courses"
        android:id="@+id/btn_courses"
        android:layout_below="@+id/btn_CGPA"
        android:layout_alignLeft="@+id/btn_CGPA"
        android:layout_alignStart="@+id/btn_CGPA"
        android:layout_marginTop="31dp"
        android:layout_alignRight="@+id/btn_CGPA"
        android:layout_alignEnd="@+id/btn_CGPA"
        android:onClick="onCourseClick"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carrier Path"
        android:id="@+id/btn_Carrerpath"
        android:layout_below="@+id/btn_courses"
        android:layout_alignLeft="@+id/btn_courses"
        android:layout_alignStart="@+id/btn_courses"
        android:layout_marginTop="32dp"
        android:layout_alignRight="@+id/btn_courses"
        android:layout_alignEnd="@+id/btn_courses"
        android:onClick="onCarrierClick"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feedback"
        android:id="@+id/btn_feedBack"
        android:layout_below="@+id/btn_Carrerpath"
        android:layout_alignLeft="@+id/btn_Carrerpath"
        android:layout_alignStart="@+id/btn_Carrerpath"
        android:layout_marginTop="53dp"
        android:layout_alignRight="@+id/btn_Carrerpath"
        android:layout_alignEnd="@+id/btn_Carrerpath"
        android:onClick="onFeedback"/>
</RelativeLayout>