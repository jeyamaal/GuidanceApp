<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffe1f6ff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Do You Have Repeats"
        android:id="@+id/textView8"
        android:layout_x="9dp"
        android:layout_y="32dp"
        android:textSize="35dp"
        android:textColor="#ff8533" />

    <RadioGroup
        android:layout_width="122dp"
        android:layout_height="125dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="78dp"
        android:layout_marginStart="78dp"
        android:id="@+id/radioRepeat"
        android:layout_x="136dp"
        android:layout_y="129dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YES"
            android:id="@+id/radioButton6"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:checked="false"
            android:layout_marginBottom="20dp"
            android:textSize="25dp"
            android:textColor="#004080" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NO"
            android:id="@+id/radioButton7"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:checked="false"
            android:layout_marginBottom="20dp"
            android:textSize="25dp"
            android:textColor="#004080" />


    </RadioGroup>

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/txt_repeat"
        android:layout_x="90dp"
        android:layout_y="307dp"
        android:editable="true"
        android:enabled="true"
        android:minWidth="100dp"
        android:hint="No of Repeats"
        android:textSize="25dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/btn_repeat_submit"
        android:onClick="btn_repeat_submit"
        android:layout_x="91dp"
        android:layout_y="401dp"
        android:textColor="#ffffff"
        android:background="#ff8533"
        android:textSize="25dp" />

</AbsoluteLayout>